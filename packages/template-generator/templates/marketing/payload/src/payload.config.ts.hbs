import path from 'path'
import { fileURLToPath } from 'url'
import { buildConfig } from 'payload'
import { postgresAdapter } from '@payloadcms/db-postgres'
import { lexicalEditor } from '@payloadcms/richtext-lexical'
import { seoPlugin } from '@payloadcms/plugin-seo'
import { resendAdapter } from '@payloadcms/email-resend'
import sharp from 'sharp'
{{#if (eq integrations.payloadStorage 's3')}}
import { s3Storage } from '@payloadcms/storage-s3'
{{/if}}
{{#if (eq integrations.payloadStorage 'r2')}}
import { s3Storage } from '@payloadcms/storage-s3'
{{/if}}
{{#if (eq integrations.payloadStorage 'vercel-blob')}}
import { vercelBlobStorage } from '@payloadcms/storage-vercel-blob'
{{/if}}
{{#if (eq integrations.payloadStorage 'gcs')}}
import { gcsStorage } from '@payloadcms/storage-gcs'
{{/if}}

import { Users, Media, Pages, Posts, Categories, FAQs } from './collections'
import { Header, Footer } from './globals'
import { getServerSideURL } from './utilities/getURL'

const __filename = fileURLToPath(import.meta.url)
const __dirname = path.dirname(__filename)

export default buildConfig({
  admin: {
    user: Users.slug,
    importMap: {
      baseDir: path.resolve(__dirname),
    },
    components: {
      beforeLogin: ['@/components/BeforeLogin'],
      beforeDashboard: ['@/components/BeforeDashboard'],
    },
    livePreview: {
      breakpoints: [
        {
          label: 'Mobile',
          name: 'mobile',
          width: 375,
          height: 667,
        },
        {
          label: 'Tablet',
          name: 'tablet',
          width: 768,
          height: 1024,
        },
        {
          label: 'Desktop',
          name: 'desktop',
          width: 1440,
          height: 900,
        },
      ],
    },
  },
  db: postgresAdapter({
    pool: {
      connectionString: process.env.DATABASE_URL,
    },
  }),
  editor: lexicalEditor(),
  email: resendAdapter({
    defaultFromAddress: process.env.RESEND_FROM_EMAIL || 'noreply@example.com',
    defaultFromName: '{{projectName}}',
    apiKey: process.env.RESEND_API_KEY || '',
  }),
  collections: [Users, Media, Pages, Posts, Categories, FAQs],
  globals: [Header, Footer],
  plugins: [
{{#if (eq integrations.payloadStorage 's3')}}
    s3Storage({
      collections: {
        media: true,
      },
      bucket: process.env.S3_BUCKET!,
      config: {
        credentials: {
          accessKeyId: process.env.S3_ACCESS_KEY_ID!,
          secretAccessKey: process.env.S3_SECRET_ACCESS_KEY!,
        },
        region: process.env.S3_REGION!,
        endpoint: process.env.S3_ENDPOINT,
        forcePathStyle: true,
      },
    }),
{{/if}}
{{#if (eq integrations.payloadStorage 'r2')}}
    s3Storage({
      collections: {
        media: true,
      },
      bucket: process.env.R2_BUCKET!,
      config: {
        credentials: {
          accessKeyId: process.env.R2_ACCESS_KEY_ID!,
          secretAccessKey: process.env.R2_SECRET_ACCESS_KEY!,
        },
        region: 'auto',
        endpoint: process.env.R2_ENDPOINT!,
        forcePathStyle: true,
      },
    }),
{{/if}}
{{#if (eq integrations.payloadStorage 'vercel-blob')}}
    vercelBlobStorage({
      collections: {
        media: true,
      },
      token: process.env.BLOB_READ_WRITE_TOKEN!,
    }),
{{/if}}
{{#if (eq integrations.payloadStorage 'gcs')}}
    gcsStorage({
      collections: {
        media: true,
      },
      bucket: process.env.GCS_BUCKET!,
      options: {
        projectId: process.env.GCS_PROJECT_ID,
        credentials: JSON.parse(process.env.GCS_CREDENTIALS || '{}'),
      },
    }),
{{/if}}
    seoPlugin({
      collections: ['pages', 'posts'],
      uploadsCollection: 'media',
      generateTitle: ({ doc }) => `${doc?.title ?? ''} | {{projectName}}`,
      generateDescription: ({ doc }) => doc?.excerpt ?? '',
    }),
  ],
  cors: [getServerSideURL()].filter(Boolean),
  secret: process.env.PAYLOAD_SECRET!,
  sharp,
  typescript: {
    outputFile: path.resolve(__dirname, 'payload-types.ts'),
  },
{{#if (eq integrations.payloadStorage 'local')}}
  upload: {
    limits: {
      fileSize: 5000000, // 5MB
    },
  },
{{/if}}
})
